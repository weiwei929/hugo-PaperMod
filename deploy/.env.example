# Hugo Editor 环境配置文件
# 复制此文件为 .env 并根据需要修改配置

# 基本配置
NODE_ENV=production
TZ=Asia/Shanghai

# 服务端口配置
EDITOR_UI_PORT=8080
FILE_SERVER_PORT=8081
HUGO_SERVER_PORT=1313
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# 域名配置
DOMAIN=your-domain.com
EMAIL=admin@your-domain.com

# SSL配置
USE_SSL=false
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem

# 数据库配置（如果使用）
# REDIS_URL=redis://redis:6379
# REDIS_PASSWORD=

# 文件上传配置
MAX_FILE_SIZE=50MB
UPLOAD_DIR=/app/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,svg

# 图片处理配置
IMAGE_QUALITY_JPEG=85
IMAGE_QUALITY_PNG=6
IMAGE_QUALITY_WEBP=85
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
AUTO_WEBP_CONVERSION=true

# 安全配置
CORS_ORIGINS=http://localhost:8080,https://your-domain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# 日志配置
LOG_LEVEL=info
LOG_FILE=/app/logs/hugo-editor.log
ACCESS_LOG_FILE=/app/logs/access.log
ERROR_LOG_FILE=/app/logs/error.log

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/app/backups

# 监控配置
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=false

# Hugo配置
HUGO_PROJECT_ROOT=/app
HUGO_CONTENT_DIR=content
HUGO_STATIC_DIR=static
HUGO_THEMES_DIR=themes
HUGO_CONFIG_FILE=config.yml

# 开发配置（仅开发环境）
# DEBUG=true
# HOT_RELOAD=true
# MOCK_DATA=false
